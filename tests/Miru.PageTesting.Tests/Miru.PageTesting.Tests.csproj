  <ItemGroup>
    <ProjectReference Include="..\..\src\Miru.PageTesting.Chrome\Miru.PageTesting.Chrome.csproj" />
    <ProjectReference Include="..\..\src\Miru.PageTesting.Firefox\Miru.PageTesting.Firefox.csproj" />

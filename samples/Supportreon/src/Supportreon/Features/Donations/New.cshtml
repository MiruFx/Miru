@model DonationNew.Command

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card">
            <div class="card-body">
                    
                <h3>New Donation</h3>
                
                <miru-form>

                    <miru-summary />
                    
                    <mi for="ProjectId" />
                    
                    <div class="form-group row">
                        <span class="col-md-4 col-form-label text-md-right"></span>
                        
                        <div class="col-md-6">
                            <md for="Project.Name" />
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <ml for="Amount" class="col-md-4 col-form-label text-md-right" />

                        <div class="col-md-6">
                            <mi for="Amount" />
                            <small class="form-text text-muted">
                                Minimum amount is <md for="Project.MinimumDonation" class="font-weight-bold"/>
                            </small>
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <ml for="CreditCard" class="col-md-4 col-form-label text-md-right" />

                        <div class="col-md-6">
                            <mi for="CreditCard" />
                        </div>
                    </div>
                    
                    <div class="form-group row mb-0">
                        <div class="col-md-6 offset-md-4">
                            <miru-submit value="Donate" />
                        </div>
                    </div>
                    
                </miru-form>
                   
            </div>
        </div>
    </div>
</div>

@model ProjectEnd.Command

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card">
            <div class="card-body">
                    
                <h3>End Project</h3>
                
                <miru-form miru-if="@Model.Project.IsActive">

                    <miru-summary />
                    
                    <miru-input for="Id"/>
                    
                    <div class="alert alert-warning">
                        Do you confirm ending the project <md for="Project.Name" />?
                    </div>
                    
                    <div class="form-group row mb-0">
                        <div class="col-md-6 offset-md-4">
                            <a for="@(new ProjectShow.Query { Id = Model.Id })">← Back to Project</a> or 
                            <miru-submit value="End Project" class="btn btn-danger" />
                        </div>
                    </div>
                    
                </miru-form>
                
                <div miru-if="@(Model.Project.IsActive == false)">
                    <div class="alert alert-info">
                        The project <md for="Project.Name" /> has ended already
                    </div>
                    
                    <a for="@(new ProjectShow.Query { Id = Model.Id })">← Back to Project</a>
                </div>
                   
            </div>
        </div>
    </div>
</div>

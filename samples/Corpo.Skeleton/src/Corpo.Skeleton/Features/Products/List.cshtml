@model ProductList.Result

<div class="row justify-content-center">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">

                <h3>Products</h3>
                
                <div class="mb-4">
                    <a for="@(new ProductNew())">New Product</a>
                </div>
                
                <div miru-if-empty="@Model.Items" class="alert alert-warning">There are no Products to show</div>
                
                <miru-table for="Items" class="table table-striped">
                    <thead>
                    <tr>
                        <miru-th for="Items[0].Name" />
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>

                    @{ var i = 0; }
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>
                                <a for="@(new ProductShow.Query { Id = item.Id })">
                                    <md for="Items[i].Name"/>
                                </a>
                            </td>
                            <td>
                                <a for="@(new ProductEdit.Query { Id = item.Id })">Edit</a>
                            </td>
                        </tr>
                        
                        i++;
                    }

                    </tbody>
                </miru-table>
                
            </div>
        </div>
    </div>
</div>
@model Mong.Features.Password.PasswordReset.Command

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">Reset Password</div>

            <div class="card-body">
                    
                <miru-form>
                
                    <miru-summary />
                    
                    <mi for="Token" type="hidden"/>

                    <div class="form-group row">
                        <ml for="Password"/>
                         
                        <div class="col-md-6">
                            <mi for="Password"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <ml for="PasswordConfirmation"/>
                         
                        <div class="col-md-6">
                            <mi for="PasswordConfirmation"/>
                        </div>
                    </div>
                    
                    <div class="form-group row mb-0">
                        <div class="col-md-6 offset-md-4">
                            <miru-submit value="Reset Password"/>
                        </div>
                    </div>
                    
                </miru-form>
                   
            </div>
        </div>
    </div>
</div>

@model Mong.Features.Password.PasswordEdit.Command

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">Change Password</div>

            <div class="card-body">
                    
                <miru-form>
                
                    <miru-summary />
                    
                    <div class="form-group row">
                        <ml for="CurrentPassword" />
                        
                        <div class="col-md-6">
                            <mi for="CurrentPassword" />
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <ml for="Password" />
                         
                        <div class="col-md-6">
                            <mi for="Password" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <ml for="PasswordConfirmation" />
                         
                        <div class="col-md-6">
                            <mi for="PasswordConfirmation" />
                        </div>
                    </div>
                    
                    <div class="form-group row mb-0">
                        <div class="col-md-6 offset-md-4">
                            <miru-submit />
                        </div>
                    </div>
                    
                </miru-form>
                   
            </div>
        </div>
    </div>
</div>

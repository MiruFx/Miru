@model CustomerList.Result

<div class="card mb-4">
    <div class="card-body">

        <h3>Customers</h3>

        <div class="row my-3 mx-1">
            <div class="col-md-12">
                <div>
                    <i class="fas fa-plus"></i> 
                    @* <a for="@(new UserNew())">New User</a> *@
                </div>
            </div>
        </div>

        <div miru-if-empty="@Model.Customers" class="alert alert-warning">
            There are no Customers
        </div>

        <miru-table for="Customers" class="table table-striped table-hover">
            <thead>
            <tr>
                <miru-th for="Customers[0].CustomerName">Name</miru-th>
            </tr>
            </thead>
            <tbody>

            @{ var i = 0; }
            @foreach (var item in Model.Customers)
            {
                <tr>
                    <miru-td>
                        <a href="#">@Model.Customers[i].CustomerName</a>
                    </miru-td>
                </tr>

                i++;
            }

            </tbody>
        </miru-table>

    </div>
</div>
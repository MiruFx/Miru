@model PasswordForgot.Command

@{
    Layout = "Admin/_Master";
}

<div class="card m-5">
    <div class="card-body">

        <div class="row justify-content-center">
            <div class="col-md-6 m-4">

                <h4>Reset Password</h4>

                <miru-form>

                    <miru-summary/>

                    <div class="mb-3">
                        <miru-label for="Email"/>
                        <miru-input for="Email"/>
                    </div>

                    <miru-submit />

                </miru-form>

            </div>
        </div>
    </div>
</div>
@model GoalEdit.Command

<template data-page-update="hide#goal-show_@Model.Id"></template>

<template data-page-update="update#goal-edit_@Model.Id">
    
    <miru-form for="@Model">
    
        <miru-summary />
        
        <mi for="Id" type="hidden" />
        
        <div class="row mb-1">
            
            <div class="col-sm-12 col-lg-6">
                <mi for="Name" />
            </div>
                            
            <div class="col-sm-12 col-lg-6">
                
                <miru-submit value="Save" data-disable-with="Saving..." />
                        
                <a href="#" data-page-update="clear#goal-edit_@Model.Id, show#goal-show_@Model.Id">
                    Cancel
                </a>
                
            </div>
        </div>
            
    </miru-form>
    
</template>

<template data-page-update="focus#Name"></template>
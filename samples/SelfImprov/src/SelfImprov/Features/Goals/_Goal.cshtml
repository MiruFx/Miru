    <div id="goal-show_@Model.Id">
        <div class="row hover-highlight">
            <div class="col-6">
                @Model.Name
            </div>
            
            <div class="col-6 text-right">
                <a for="@new GoalEdit.Query {Id = Model.Id}"
                   class="ml-5"
                   data-remote="true"
                   data-disable-with="Loading...">
                    Edit
                </a>


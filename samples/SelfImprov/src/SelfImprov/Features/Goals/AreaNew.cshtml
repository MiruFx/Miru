@model AreaNew.Command

<template data-page-update="hide#area-new-link"></template>

<template data-page-update="update#area-new">

    <miru-form>
        
        <miru-summary />
                        
        <div class="row">
            <div class="col-sm-12 col-lg-6">
                <mi for="Name" placeholder="Area name" />
            </div>
                            
            <div class="col-sm-12 col-lg-6">
                <miru-submit value="Add" data-disable-with="Adding..." class="mr-2"/>
                
                <a href="#" data-page-update="clear#area-new, show#area-new-link">
                    Cancel
                </a>
            </div>
        </div>
                        
    </miru-form>

</template>

<template data-page-update="focus#Name"></template>
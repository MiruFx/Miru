@model Skeleton.Features.Accounts.AccountRegister.Command

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card">
            <div class="card-header">Register</div>

            <div class="card-body">
                    
                <miru-form>
                 
                    <miru-summary/>
                    
                    <div class="form-group row">
                        <ml for="Name"/>
                        
                        <div class="col-md-6">
                            <mi for="Name" autofocus />
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <ml for="Email"/>
                        
                        <div class="col-md-6">
                            <mi for="Email"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <ml for="Password"/>
                        
                        <div class="col-md-6">
                            <mi for="Password"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <ml for="PasswordConfirmation"/>
                         
                        <div class="col-md-6">
                            <mi for="PasswordConfirmation" />
                        </div>
                    </div>
                    
                    <div class="form-group row mb-0">
                        <div class="col-md-6 offset-md-4">
                            <miru-submit value="Register" />
                        </div>
                    </div>
                    
                </miru-form>
                   
            </div>
        </div>
    </div>
</div>
